{
  "compilerOptions": {
    "target": "ES2020",                // Good support for async/await
    "module": "CommonJS",              // Matches "type": "commonjs" in package.json
    "esModuleInterop": true,           // Allows using `require()` safely
    "moduleResolution": "node",        // Allows finding node_modules
    "strict": true,                    // Type safety
    "resolveJsonModule": true,         // In case you import JSON files
    "skipLibCheck": true,              // Skip checking .d.ts files
    "outDir": "dist",                  // Optional output folder for compiled JS
    "rootDir": "."                     // Source files in root
  },
  "include": ["index.ts"]
}
